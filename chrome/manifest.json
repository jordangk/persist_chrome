{
  "manifest_version": 3,
  "name": "PersistIQ Lead Manager",
  "version": "1.0",
  "description": "Manage leads and campaigns in PersistIQ",
  "permissions": [
    "storage",
    "activeTab"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_icon": {
      "16": "assets/icon16.png",
      "48": "assets/icon48.png",
      "128": "assets/icon128.png"
    }
  },
  "icons": {
    "16": "assets/icon16.png",
    "48": "assets/icon48.png",
    "128": "assets/icon128.png"
  },
  "web_accessible_resources": [{
    "resources": [
      "calendar.html",
      "calendar.js",
      "styles/*",
      "assets/*"
    ],
    "matches": ["<all_urls>"]
  }],
  "content_security_policy": {
    "extension_pages": "script-src 'self'; object-src 'self'"
  }
}